#include <iostream>
using namespace std ;
int main() {
    string Alphabet1;
   int i = 1;
while(i<= 3){

cout<<" Please enter an alphabet:___  " ;
cin>>Alphabet1;
i++;
if (Alphabet1== "a" ||Alphabet1== "A" ||  Alphabet1== "e" || Alphabet1=="E" || Alphabet1== "i" || Alphabet1== "I" || Alphabet1== "o" || Alphabet1=="O" || Alphabet1== "u" || Alphabet1=="U" ) {
    
    cout << " *| This alphabet is a vowel |* \n " ;
}
 else {
    cout << " *| This Alphabet is a consonant |* \n " ;
 }   
    
}   
 
 
} 
